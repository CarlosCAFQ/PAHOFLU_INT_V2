@model Paho.Models.CatCloseParameters

@{
    string labelCatalog = Paho.Controllers.ResourcesM.SgetMessage("msgCatalog", ViewBag.UsrCtry, ViewBag.UsrCtryLang);
    string labelCatalogName = Paho.Controllers.ResourcesM.SgetMessage("msgMenuCatCloseParametersView", ViewBag.UsrCtry, ViewBag.UsrCtryLang);
    string labelReturnToList = Paho.Controllers.ResourcesM.SgetMessage("msgReturnToList", ViewBag.UsrCtry, ViewBag.UsrCtryLang);
    string labelMsgDeleteRecord = Paho.Controllers.ResourcesM.SgetMessage("msgDeleteRecord", ViewBag.UsrCtry, ViewBag.UsrCtryLang);
    string labelDelete = Paho.Controllers.ResourcesM.SgetMessage("msgViewCatPopulation_Borrar", ViewBag.UsrCtry, ViewBag.UsrCtryLang);

    ViewBag.Title = labelCatalog + " - " + labelCatalogName;
}

@*<h2>Delete</h2>*@

@*<h3>Are you sure you want to delete this?</h3>*@

<div>
    <h4>@(labelCatalog) - @labelCatalogName</h4>
    <hr />
    <h3>@(labelMsgDeleteRecord)?</h3>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SurvReg.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SurvReg.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsSample)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsSampleText)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Processed)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProcessedText)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LabEndClosing)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LabEndClosingText)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HospExDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HospExDateText)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiagEg)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiagEgText)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-md-offset-1 col-md-10">
            <input type="submit" value=@labelDelete class="btn btn-default" />
        </div>
    }
</div>

<div>
    @Html.ActionLink(@labelReturnToList, "Index")
</div>

